#!/usr/bin/make -f

%:
	dh $@

override_dh_auto_build:
	make -C $(CURDIR)/apfs-snap
	make -C $(CURDIR)/apfsck
	make -C $(CURDIR)/mkapfs

override_dh_installman:
	dh_installman
	mv $(CURDIR)/debian/apfsprogs/usr/share/man/man8/apfsck.8 $(CURDIR)/debian/apfsprogs/usr/share/man/man8/fsck.apfs.8
	mv $(CURDIR)/debian/apfsprogs/usr/share/man/man8/mkapfs.8 $(CURDIR)/debian/apfsprogs/usr/share/man/man8/mkfs.apfs.8

override_dh_auto_install:
	install -p -m 0755 $(CURDIR)/apfsck/apfsck $(CURDIR)/debian/apfsprogs/usr/sbin/fsck.apfs
	install -p -m 0755 $(CURDIR)/apfs-snap/apfs-snap $(CURDIR)/debian/apfsprogs/usr/bin/apfs-snap
	install -p -m 0755 $(CURDIR)/mkapfs/mkapfs $(CURDIR)/debian/apfsprogs/usr/sbin/mkfs.apfs
